= simple_form_for @book, remote: true do |form|
  - if @book.errors.any?
    #error_explanation
      %h2
        = pluralize(@book.errors.count, "error")
        prohibited
        this book from being saved:
      %ul
        - @book.errors.full_messages.each do |msg|
          %li= msg
  .row-one
    = form.input :isbn
    = form.input :name
  .row-one
    = form.input :author
    = form.input :books_total
    = form.association :category
  .div
    = form.input :desc, as: :text
  .div
    = form.input :image
  .button-add-new
    = form.submit "Save"