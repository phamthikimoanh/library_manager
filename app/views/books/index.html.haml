#wapper-content
  %h1 Listing books 
  %table.table.table-hover
    %thead
      %tr
        %th No.
        %th Name
        %th Description
        %th #
    %tbody#books
      = render @books
  = paginate @books 

  %hr

  %button.btn.btn-default{:type => "button", :onclick => "addNew()"} Add New
  #form-add-new
    = render 'form'
