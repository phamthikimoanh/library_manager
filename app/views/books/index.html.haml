  %p.total
    Total book: #{@books_grid.assets.total_count}
    %button.btn.btn-default{:type => "button", :onclick => "addFill()"} Fillter 
  #form-fill
    = datagrid_form_for @books_grid, url: books_path

  = datagrid_table(@books_grid)
  = paginate @books_grid.assets
  %br

  %button.btn.btn-default{:type => "button", :onclick => "addNew()"} Add New Book
  #form-add-new
    = render 'form'
  = @book.book_count

