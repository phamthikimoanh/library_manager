#wapper-content
  %h2 List book order
  -if current_user && current_user.admin == true
    %p.total 
      Total book order: #{@book_orders_grid.assets.total_count}
      %button.btn.btn-default{:type => "button", :onclick => "addFill()"} Fillter 
    #form-fill
      = datagrid_form_for @book_orders_grid, url: book_orders_path
    = datagrid_table(@book_orders_grid)
    = paginate @book_orders_grid.assets, theme: 'twitter-bootstrap-3'
  - else
    = render 'book_order_user'
  %hr
  .errors_msg

  - if current_user && current_user.admin
    %button.btn.btn-default{:type => "button", :onclick => "addNewBookOrder()"} Add New 
    #form-add
      = render 'form'
