#wapper-content
  %p#notice= notice

  %h1 User Detail

  %p
    %b Name:
    = @user.name
  %p
    %b Birthday:
    = @user.birthday
  %p
    %b Phone:
    = @user.phone
  %p
    %b Address:
    = @user.address
  %p
    %b Image:
    - if @user.image?
      = image_tag @user.image.thumb.url

  = link_to 'Edit', edit_user_path(@user)
  \|
  = link_to 'Back', users_path
