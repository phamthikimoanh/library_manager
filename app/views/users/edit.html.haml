#wapper-content
  %h2 User 
  .user-info
    .user-left
      - if @user.image?
        = image_tag @user.image.thumb.url
      - else         
        %p Image: 
        %b Update image, pleaes
    .user-right
      .user-label
        %p.label
          %b Id :
        %p= @user.id
      .user-label
        %p.label
          %b Name :
        %p= @user.name
      .user-label
        %p.label
          %b Email :
        %p= @user.email
      .user-label
        %p.label
          %b Phone :
        %p= @user.phone
      .user-label
        %p.label
          %b Address :
        %p= @user.address
      .user-label
        %p.label
          %b Birthday :
        %p= @user.birthday
  %hr
  %h2 Edit User
  = simple_form_for(@user, :url => { :action => "update_user" }) do |f|
    = f.error_notification
    .row-one.user-row-one
      = f.input :name,                       
        required: false,                     
        autofocus: true,                     
        input_html: { autocomplete: "name" } 
      = f.input :birthday, start_year: Time.now.year - 60, end_year: Time.now.year, order: %i(day month year),
        required: false,                         
        autofocus: true,                         
        input_html: { autocomplete: "birthday" } 
    .row-one
      = f.input :phone,                       
        required: false,                      
        autofocus: true,                      
        input_html: { autocomplete: "phone" } 
      = f.input :address,                       
        required: false,                        
        autofocus: true,                        
        input_html: { autocomplete: "address" }
    .row-one
      = f.file_field :image, accept: "image/jpeg, image/gif, image/png, image/jpg"
    .form
    = f.button :submit , data: { "disable-with": "Saving..." }, class: "btn-save"
    = link_to "Back", :back
