%tr
    %td= user.name
    %td= user.birthday
    %td= user.phone
    %td= user.address
    %td= user.image
    %td= link_to 'Show', user_path(user), class: "btn btn-xl btn-primary", style: "color: #fff"
    %td= link_to 'Edit', edit_user_path(user), class: "btn btn-xl btn-success", style: "color: #fff"
    %td= link_to 'Destroy', user, method: :delete, remote: true, data: { confirm: 'Are you sure?' }, class: "btn btn-xl btn-danger", style: "color: #fff"
