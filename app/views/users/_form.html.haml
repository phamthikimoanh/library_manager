-# frozen_string_literal: true
= simple_form_for(@user) do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

  .form-inputs
    = f.input :name
    = f.input :birthday
    = f.input :phone
    = f.input :address
    = f.file_field :image
    
  .form-actions
    = f.button :submit
