#wapper-content
  %h1.text-center Return book card
  = simple_form_for @book_card do |f|
    = f.association :book
    = f.input :status, :as => :boolean, :input_html => { :checked => "checked" }
    .button
    = f.button :submit , data: { "disable-with": "Saving..." }, class: "btn-save"    
    = link_to "Back", :back , class: "btn-back"

